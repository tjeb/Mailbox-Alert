{
  "manifest_version": 2,
  "name": "Mailbox Alert",
  "description": "Custom popup, sounds or scripts for new mail, configurable for each folder, and as a message filter target",
  "version": "0.30.2",
  "author": "Jelte Jansen",
  "default_locale":"en-US",
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    },
    "NotifyTools": {
      "schema": "api/NotifyTools/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["NotifyTools"]],
        "script": "api/NotifyTools/implementation.js",
        "events": ["startup"]        
      }
    },
    "LegacyPrefs": {
      "schema": "api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "LegacyPrefs"
          ]
        ],
        "script": "api/LegacyPrefs/implementation.js"
      }
    }
  },
  "icons": {
    "16": "skin/classic/mailboxalert.png",
    "32": "skin/classic/mailboxalert.png",
    "64": "skin/classic/mailboxalert.png"
  },
  "background": {
    "page": "background.html"
  },
  "applications": {
    "gecko": {
      "id": "{9c21158b-2c76-4d0a-980a-c51fc9cefaa7}",
      "strict_min_version": "102.0",
      "strict_max_version": "115.*"
    }
  },
  "permissions" : [
    "storage",
    "messagesRead",
    "compose",
    "menus",
    "accountsRead"
  ]
}
